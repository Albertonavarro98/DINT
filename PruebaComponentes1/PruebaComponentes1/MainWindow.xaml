<Window x:Class="PruebaComponentes1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruebaComponentes1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <TextBlock  Margin="5" FontSize="30" Text="{Binding Path=Actual}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        </Border>
        <Button x:Name="Boton1" Width="125" Height="25" FontSize="15" Command="{Binding Path=SiguienteCommand}" Margin="5">Incrementar</Button>
    </StackPanel>
</Window>
