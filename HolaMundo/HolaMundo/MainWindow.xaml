<Window x:Class="HolaMundo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HolaMundo"
        mc:Ignorable="d"
        Title="Hola Mundo" Icon="http://icongal.com/gallery/image/107563/hand_sign_stop.png" Height="450" Width="800">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
            <TextBlock x:Name="TextoSalida" Grid.Row="0" Text="Hola Mundo!" FontSize="55" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
            <Label Grid.Row="1" Width="100" Height="25" Content="Nombre:" Margin="226,5,466,5"/>
            <TextBox Grid.Row="2"  x:Name="TextoIntroducido" Width="250" Height="25" Margin="226,0,316,0"  />
            <Button Grid.Row="2" Height="25"   Width="75" Content="Saludar"  Click="Button_Click" Margin="492,0,226,0"/>
    </Grid>
</Window>
