<Window x:Class="Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mosaico"
        mc:Ignorable="d"
        Title="Mosaico" Height="700" Width="700" MinHeight="475" MinWidth="450" Icon="128 (3).ico">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="100" Background="Pink"></Grid>
        <Grid DockPanel.Dock="Left" Width="100" Background="Pink"></Grid>
        <Grid DockPanel.Dock="Right" Width="100" Background="Aqua"></Grid>
        <Grid DockPanel.Dock="Bottom" Height="100" Background="Aqua"></Grid>
        <Grid DockPanel.Dock="Bottom" Height="100" Background="PaleGreen"></Grid>
        <Grid DockPanel.Dock="Left" Width="100" Background="PaleGreen"></Grid>
        <Grid DockPanel.Dock="Top" Height="100" Background="PaleVioletRed"></Grid>
        <Grid DockPanel.Dock="Right" Width="100" Background="PaleVioletRed"></Grid>
        <Grid Background="Violet" MinHeight="25" MinWidth="25">
        </Grid>
    </DockPanel>
</Window>
