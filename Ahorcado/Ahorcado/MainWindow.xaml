<Window x:Class="Ahorcado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ahorcado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Label DockPanel.Dock="Top" FontSize="25" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center" > Ahorcado </Label>
        <DockPanel DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10">
                <Button Margin="5" Height="25" Width="100">Nueva partida</Button>
                <Button Margin="5" Height="25" Width="75">Rendirse</Button>
            </StackPanel>
            <Label DockPanel.Dock="Right"></Label>
        </DockPanel>
        <Image Source="0.jpg" Stretch="Fill" Margin="15 0 0 0"  Width="250" DockPanel.Dock="Left" />
        <DockPanel Margin="15">
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button Margin="5" Grid.Row="0" Grid.Column="0">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="0">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="0">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="1">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="1">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="1">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="2">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="2">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="2">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="3">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="3">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="3">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="4">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="4">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="4">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="5">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="5">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="5">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="6">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="6">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="6">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="7">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="7">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="7">A</Button>
                <Button Margin="5" Grid.Row="0" Grid.Column="8">A</Button>
                <Button Margin="5" Grid.Row="1" Grid.Column="8">A</Button>
                <Button Margin="5" Grid.Row="2" Grid.Column="8">A</Button>
            </Grid>
            <Viewbox>
                <Label></Label>
            </Viewbox>
        </DockPanel>
    </DockPanel>
</Window>
