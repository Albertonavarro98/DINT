<Window x:Class="MultiventanaPractica1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiventanaPractica1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Margin="10" Command="{Binding Path=AbrirCC1}">Content Control 1</Button>
            <Button Margin="10" Command="{Binding Path=AbrirCC2}">Content Control 2</Button>
        </StackPanel>
        <ContentControl Content="{Binding Path=Opcion}">
            
        </ContentControl>
    </DockPanel>
    
</Window>
