<Window x:Class="ComandosActividad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComandosActividad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" DockPanel.Dock="Top">
                <Button Margin="10 10 10 0" Width="125" Height="25" Command="{Binding Path=AbrirAñadirPersona}">Añadir Persona</Button>
                <Button Margin="10 10 10 0" Width="125" Height="25" Command="{Binding Path=AbrirListaPersonas}">Lista de Personas</Button>
            </StackPanel>
            <Border  BorderBrush="Gray" BorderThickness="2" Margin="10" >
                <ContentControl Content="{Binding Path=Opcion}">

                </ContentControl>
            </Border>
        </DockPanel>
    </Grid>
</Window>
