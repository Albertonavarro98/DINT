<Window x:Class="ComandosActividad.AñadirNacionalidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComandosActividad"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="AñadirNacionalidad"  Height="200" Width="350">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label>Nacionalidad:</Label>
        <TextBox TextAlignment="Center" Margin="10"></TextBox>
        <StackPanel Orientation="Horizontal" Margin="15">
            <Button Margin="10" Width="100" IsCancel="True">Cancelar</Button>
            <Button Click="AceptarButton_Click" Margin="10" Width="100" IsDefault="True">Aceptar</Button>
        </StackPanel>
    </StackPanel>
</Window>
