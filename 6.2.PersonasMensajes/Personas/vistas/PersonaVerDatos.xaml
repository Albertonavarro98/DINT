<UserControl x:Class="Personas.vistas.PersonaVerDatos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas.vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <Label Margin="10 10 10 0">Nombre</Label>
        <TextBox IsReadOnly="True" Text="{Binding Path=PersonaActual.Nombre}" Margin="10 0 10 0"></TextBox>
        <Label  Margin="10 10 10 0">Edad</Label>
        <TextBox IsReadOnly="True" Text="{Binding Path=PersonaActual.Edad}" Margin="10 0 10 0"></TextBox>
        <Label Margin="10 10 10 0">Nacionalidad</Label>
        <TextBox IsReadOnly="True" Text="{Binding Path=PersonaActual.Nacionalidad}" Margin="10 0 10 0"></TextBox>
    </StackPanel>
</UserControl>
